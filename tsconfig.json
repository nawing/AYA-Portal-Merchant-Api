// tsconfig.json
{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext", // Modern resolution logic
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true, // Essential for generating .d.ts files
    "outDir": "./dist/esm", // Output for ES Modules (will use for 'module' in package.json)
    "rootDir": "./src"
  },
  "include": [
    "src/**/*"
  ]
}
